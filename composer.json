{
    "name": "logiksystems/hephaestus-framework",
    "description": "The Hephaestus Framework.",
    "keywords": [
        "framework",
        "laravel",
        "discord",
        "laravel zero"
    ],
    "homepage": "https://laravel-zero.com",
    "authors": [
        {
            "name": "bcts",
            "homepage": "https://github.com/tom-shelby"
        },
        {
            "name": "Lilierd",
            "homepage": "https://github.com/lilierd"
        }
    ],
    "type": "framework",

    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/log": "^10.0",
        "laravel-zero/framework": "^10.2",
        "nunomaduro/termwind": "^1.15.1",
        "react/async": "^4.2",
        "simplito/elliptic-php": "^1.0",
        "team-reflex/discord-php": "^7.3"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.22"
    },
    "autoload": {
        "psr-4": {
            "Hephaestus\\Framework\\": "src/",
            "App\\Providers\\": "laravel/Providers/",
            "App\\Commands\\": "laravel/Commands/"
        }
    },
    "extra": {
        "laravel": {
            "providers" : {
                [
                    "Hephaestus\\Framework\\Provider\\HephaestusServiceProvider"
                ]
            }
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": [
        "hephaestus-framework"
    ]
}
