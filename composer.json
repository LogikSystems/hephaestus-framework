{
    "name": "logiksystems/hephaestus-framework",
    "description": "The Hephaestus Framework.",
    "keywords": [
        "framework",
        "laravel",
        "discord",
        "laravel zero"
    ],
    "homepage": "https://laravel-zero.com",
    "authors": [
        {
            "name": "bcts",
            "homepage": "https://github.com/tom-shelby"
        },
        {
            "name": "Lilierd",
            "homepage": "https://github.com/lilierd"
        }
    ],
    "support": {
        "issues": "https://github.com/logiksystems/hephaestus-framework/issues",
        "source": "https://github.com/logiksystems/hephaestus-framework"
    },
    "type": "framework",
    "license": "MIT",
    "require": {
        "php": "^8.2.0",
        "nunomaduro/termwind": "^2.0.1",
        "react/async": "^4.2",
        "simplito/elliptic-php": "^1.0",
        "team-reflex/discord-php": "^7.3"
    },
    "require-dev": {
        "illuminate/log": "^11.0.0",
        "laravel-zero/framework": "^11.0.0",
        "laravel/pint": "^1.15.1",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.22"
    },
    "autoload": {
        "psr-4": {
            "Hephaestus\\Framework\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hephaestus\\Framework\\Providers\\HephaestusServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "hephaestus-framework"
    ]
}
